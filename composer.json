{
    "name": "wordplate/wordplate",
    "description": "The WordPlate framework.",
    "keywords": ["wordplate", "wordpress", "boilerplate"],
    "support": {
        "issues": "https://github.com/wordplate/framework/issues",
        "source": "https://github.com/wordplate/framework"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Vincent Klaiber",
            "email": "hello@vinkla.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        }
    ],
    
    "require": {
        "composer/installers": "~1.0",
        "illuminate/support": "~5.0",
        "jjgrainger/wp-custom-post-type-class": "~1.0",
        "johnpbloch/wordpress": "~4.0",
        "roots/soil": "~3.0",
        "symfony/var-dumper": "~2.0",
        "vlucas/phpdotenv": "~1.0"
    },
    "require-dev": {
        "fabpot/php-cs-fixer": "~1.0",
        "filp/whoops": "~1.0"
    },
    "extra": {
        "installer-paths": {
            "wp-content/plugins/{$name}": [
                "type:wordpress-plugin"
            ]
        },
        "wordpress-install-dir": "wordpress"
    },
    "extra":{
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
